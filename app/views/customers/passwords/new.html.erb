<div class="container signup">
	<div class="row">
		<h4 class="col-md-offset-2 col-md-4"><span>パスワードの再設定</span></h4>
	</div>

	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
	  <%= render "devise/shared/error_messages", resource: resource %>

	  <div class="row field">
	    <%= f.label :メールアドレス, class: "col-md-offset-3 col-md-2" %>
	    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-4" %>
	  </div>

	  <div class="actions row">
	    <%= f.submit "パスワード再設定メールを送信",class: "btn btn-primary col-md-offset-4 col-md-3" %>
	  </div>
	<% end %>
</div>

